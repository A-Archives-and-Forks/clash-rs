{
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "cargo"
            ],
            "groupName": "rust-dependencies",
            "matchPackagePatterns": [
                ".*"
            ],
            "schedule": [
                "before 5am on Sunday"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "actions-dependencies",
            "matchPackagePatterns": [
                ".*"
            ],
            "schedule": [
                "before 5am on Sunday"
            ]
        }
    ]
}
